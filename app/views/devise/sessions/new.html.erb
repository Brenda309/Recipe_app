<div class="card mx-3">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control m-2", placeholder: "email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control m-2", placeholder: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mx-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-secondary m-2" %>
      </div>
    <% end %>
  </div>
</div>
