<h1>Add new ingredient</h1>
<%= form_with model: @recipe_foods, url: recipe_recipe_foods_path, method: :post, local: true, scope: :recipe_food do |form| %>
  <div class="form-group">
    <%= form.collection_select :food_id, @foods.order(:name),:id,:name, class:"form-control", placeholder: "Food" %>
  </div>
  <div class="form-group">
    <%= form.number_field :quantity, class:"form-control", placeholder:"Quantity" %>
  </div>
  <div>
    <%= form.submit 'Save recipe food', class:'btn btn-secondary' %>
  </div>
<% end %>
