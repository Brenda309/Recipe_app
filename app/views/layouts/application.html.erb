   <%= link_to user_signed_in? ? current_user.name : 'Recipe app', root_path, class: "text-decoration-none p-3" %>
  </div>
  <div class = "nav_buttons">
  <%= render 'partials/navbar' %>
  </div>
  </section>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>